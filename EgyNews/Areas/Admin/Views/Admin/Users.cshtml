@model IEnumerable<EgyNews.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
    var userRoles = ViewBag.UserRoles as Dictionary<string, string>;
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Role</th> <!-- Added Role Column -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : "No Role")</td> <!-- Display Role -->
                <td>
                    <a asp-action="EditUserRole" asp-route-userId="@user.Id" class="btn btn-primary">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>