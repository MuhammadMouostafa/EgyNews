@model List<Article>

@if (Model.Any())
{
    <h2>@ViewBag.CategoryName</h2>
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@article.ImageUrl" class="card-img-top" alt="Article Image">
                    <div class="card-body">
                        <h3 class="card-title">@article.Title</h3>
                        <p class="card-text">@article.Content.Substring(0, Math.Min(100, article.Content.Length))...</p>
                        <small class="text-muted">Published on: @article.PublishDate.ToShortDateString()</small>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-controller="Home" asp-action="ArticleDetails" asp-route-id="@article.Id" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">No articles found in this category.</div>
}