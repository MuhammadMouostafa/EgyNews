@model List<Category>

<h1> Categories </h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Action</th>
		</tr>
		<tbody>
			@foreach (var category in Model)
			{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>
					<a asp-action="Edit" asp-route-id="@category.Id">Edit</a> |
					<a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
				</td>
			</tr>
			}
		</tbody>
	</thead>
</table>

<a asp-action="Create" class="btn btn-primary"> Craete New Category </a>